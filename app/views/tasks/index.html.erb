<h1>タスク一覧</h1>

<button type="button" class="btn btn-secondary"><%= link_to '新規作成', new_task_path %></button>


<table  class="table">
  <tr>
    <th>タスクの名前</th>
    <th>内容</th>
    <th></th>
    <th></th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.name, task_path(task) %></td>
    <td><%= task.description %></td>
    <td><%= link_to '編集', edit_task_path(task) %></td>
    <td><%= link_to '削除', task_path(task), method: :delete, data: { confirm: "タスク「#{task.name}」を削除しますが、よろしいですか？"} %></td>
  </tr>
  <% end %> 
</table>

